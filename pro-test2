<body>
  <div class="container">
    <h1>BLS Productivity and Costs Quiz</h1>
    <div id="quiz"></div>
    <div class="score-area" id="score"></div>
    <button class="reset-btn" onclick="location.reload()">Reset Quiz</button>
  </div>
  <script>
    const quizData = [
      {
        section: "Labor Productivity Trends",
        question: "What was the percentage change in nonfarm business sector labor productivity in Q1 2025?",
        options: ["+0.3%", "-0.8%", "+1.4%", "-0.6%"],
        answer: 1,
        explanation: "Labor productivity decreased 0.8% in Q1 2025."
      },
      {
        section: "Labor Productivity Trends",
        question: "Over the last four quarters, what was the percentage change in nonfarm business sector labor productivity?",
        options: ["-0.6%", "+5.7%", "+1.4%", "0.0%"],
        answer: 2,
        explanation: "From Q1 2024 to Q1 2025, productivity increased 1.4%."
      },
      {
        section: "Unit Labor Costs",
        question: "What was the percentage change in unit labor costs in Q1 2025 for the nonfarm business sector?",
        options: ["1.3%", "3.8%", "5.7%", "0.7%"],
        answer: 2,
        explanation: "Unit labor costs rose 5.7%."
      },
      {
        section: "Unit Labor Costs",
        question: "Which two variables determine unit labor costs?",
        options: ["Interest rates and inflation", "Output and hours worked", "Hourly compensation and labor productivity", "Real GDP and CPI"],
        answer: 2,
        explanation: "Unit labor costs = Hourly Compensation / Labor Productivity."
      },
      {
        section: "Real Hourly Compensation",
        question: "What was the quarterly change in real hourly compensation in Q1 2025?",
        options: ["+2.0%", "+1.0%", "-0.5%", "0.0%"],
        answer: 1,
        explanation: "Real hourly compensation rose 1.0% in Q1 2025."
      },
      {
        section: "Manufacturing Sector",
        question: "How much did durable manufacturing productivity increase in Q1 2025?",
        options: ["2.2%", "4.5%", "7.1%", "-0.3%"],
        answer: 2,
        explanation: "Durable manufacturing productivity rose 7.1%."
      },
      {
        section: "Manufacturing Sector",
        question: "What was the change in unit labor costs in the total manufacturing sector in Q1 2025?",
        options: ["+1.6%", "+5.7%", "+3.8%", "-0.2%"],
        answer: 0,
        explanation: "Total manufacturing unit labor costs increased 1.6%."
      },
      {
        section: "Business Cycle Comparison",
        question: "What is the annualized productivity growth rate in the current business cycle starting Q4 2019?",
        options: ["1.5%", "2.1%", "0.5%", "1.8%"],
        answer: 3,
        explanation: "Since Q4 2019, productivity has grown at 1.8% annualized."
      },
      {
        section: "Business Cycle Comparison",
        question: "What was the labor productivity growth rate during the previous business cycle (2007–2019)?",
        options: ["2.4%", "1.8%", "1.5%", "0.6%"],
        answer: 2,
        explanation: "The 2007–2019 cycle had a 1.5% annualized growth."
      },
      {
        section: "Compensation Effects",
        question: "What happens when productivity increases while compensation remains constant?",
        options: ["Unit labor costs rise", "Unit labor costs fall", "Inflation increases", "Output declines"],
        answer: 1,
        explanation: "Higher productivity lowers unit labor costs."
      }
    ];

    let score = 0;
    const quizContainer = document.getElementById("quiz");
    const scoreContainer = document.getElementById("score");

    quizData.forEach((q, index) => {
      const div = document.createElement("div");
      div.classList.add("question");
      div.innerHTML = `<h3>(${q.section}) Q${index + 1}: ${q.question}</h3>`;

      const optionsDiv = document.createElement("div");
      optionsDiv.classList.add("options");

      q.options.forEach((opt, optIndex) => {
        const btn = document.createElement("button");
        btn.innerText = opt;
        btn.onclick = () => {
          if (btn.classList.contains("correct") || btn.classList.contains("wrong")) return;
          if (optIndex === q.answer) {
            btn.classList.add("correct");
            score++;
          } else {
            btn.classList.add("wrong");
            optionsDiv.children[q.answer].classList.add("correct");
          }
          explanation.style.display = "block";
          scoreContainer.innerHTML = `Current Score: ${score} / ${quizData.length}`;
        };
        optionsDiv.appendChild(btn);
      });

      const explanation = document.createElement("div");
      explanation.classList.add("explanation");
      explanation.innerText = `Explanation: ${q.explanation}`;

      div.appendChild(optionsDiv);
      div.appendChild(explanation);
      quizContainer.appendChild(div);
    });
  </script>
</body>
</html>
