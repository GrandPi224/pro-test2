  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f7fa;
      margin: 0;
      padding: 0;
    }
    .container {
      max-width: 800px;
      margin: 30px auto;
      background: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    h1, h2 {
      text-align: center;
    }
    .question {
      margin-bottom: 20px;
    }
    .options button {
      display: block;
      width: 100%;
      margin: 5px 0;
      padding: 10px;
      border: none;
      border-radius: 5px;
      background: #1e40af;
      color: white;
      cursor: pointer;
    }
    .options button.correct {
      background-color: #16a34a;
    }
    .options button.wrong {
      background-color: #dc2626;
    }
    .explanation {
      display: none;
      margin-top: 10px;
      font-style: italic;
      color: #333;
    }
    .score-area {
      text-align: center;
      font-size: 1.2em;
      margin-top: 30px;
    }
    .reset-btn {
      display: block;
      margin: 20px auto;
      padding: 10px 20px;
      background-color: #2563eb;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
  </style>
